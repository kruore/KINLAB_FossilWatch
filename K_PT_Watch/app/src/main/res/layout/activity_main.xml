<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/GPS"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/screen_percentage_05"
            android:text="GPS"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display2"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="35dp"
                android:paddingTop="@dimen/screen_percentage_05"
                android:text="speed"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display2"
                android:textColor="@color/white"
                android:textSize="20sp"
                >
            </TextView>
            <TextView
                android:id="@+id/speed2"
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/screen_percentage_05"
                android:text="speed"
                android:textAlignment="center"
                android:layout_marginRight="20dp"
                android:textAppearance="@android:style/TextAppearance.Material.Display2"
                android:textColor="@color/white"
                android:textSize="20sp"
                >
            </TextView>
        </TableRow>
        <TextView
            android:id="@+id/heartbeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingTop="@dimen/screen_percentage_05"
            android:paddingBottom="@dimen/screen_percentage_05"
            android:text="Waiting"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display2"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/heartbeatmax"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingTop="@dimen/screen_percentage_05"
                android:text="MAX"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display2"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/heartbeatmin"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingTop="@dimen/screen_percentage_05"
                android:text="MIN"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display2"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </TableRow>
            />

    </TableLayout>
</androidx.wear.widget.BoxInsetLayout>